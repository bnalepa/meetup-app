<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MeetUp - Group</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="app">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>MeetUp</h2>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/group">Meetings</a></li>
                    <li><a href="#">Groups</a></li>
                </ul>
            </nav>

            <!-- Profile Section at the Bottom -->
            <div class="profile">
                <img src="path-to-avatar.jpg" alt="User avatar">
                <div class="name">Jane Smith</div>
                <p>janesmith@email.com</p>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="content">
            <!-- Left section for upcoming meetups -->
            <section class="upcoming-meetups-container">
                <h3>Upcoming meetups</h3>
                <div class="meetup-item">
                    <span>Meeting place selection</span>
                    <span class="status">New request</span>
                </div>
                <div class="meetup-item">
                    <span>Interesting place selection</span>
                    <span class="status">Accepted</span>
                </div>
                <div class="meetup-item">
                    <span>Choose meeting point</span>
                    <span class="status">Pending</span>
                </div>
            </section>

            <!-- Right section for meeting details -->
            <section class="meeting-details">
                <h3>Meeting place selection</h3>
                <div class="details">
                    <p>Availability: <strong>Myself</strong></p>
                    <p>Schedule: <strong>Now</strong></p>
                    <p>Location: <strong>No location details</strong></p>
                    <button class="add-location">Add location</button>
                    <button class="share">Share</button>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
