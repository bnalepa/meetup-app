<script>
    document.addEventListener('DOMContentLoaded', function () {
      const redirectAlert = getCookie('redirectAlert');
      if (redirectAlert) {
        alert(decodeURIComponent(redirectAlert)); // ðŸ”¹ Dekodowanie treÅ›ci ciasteczka
        document.cookie = "redirectAlert=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;"; // ðŸ”¹ UsuniÄ™cie ciasteczka
      }
    });
  
    function getCookie(name) {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop().split(';').shift();
    }
  </script>
  
  


